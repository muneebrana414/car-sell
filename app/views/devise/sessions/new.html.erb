<div class="container-fluid w-25 border rounded shadow my-3 py-2 text-center">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-3 text-start">
      <%= f.label :login, class: "form-label" %><br />
      <%= f.text_field :login, class: "form-control" %>
      <% if resource.errors.any? %>
        <div class="invalid-feedback d-block">
          <% resource.errors.full_messages_for(:login).each do |error_message| %>
            <%= error_message %>.
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="field mb-3 text-start">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      <% if resource.errors.any? %>
        <div class="invalid-feedback d-block">
          <% resource.errors.full_messages_for(:password).each do |error_message| %>
            <%= error_message %>.
          <% end %>
        </div>
      <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-3 form-check text-start">
        <%= f.check_box :remember_me, class: "form-check-input"%>
        <%= f.label :remember_me, class:"form-check-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
